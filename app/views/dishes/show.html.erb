<div class="page-header">
  <h3><%= @dish.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
<dt> Created By</dt>
<dd><%= @dish.creator.first_name %></dd>

      <dt>Ingredients</dt>
      <dd>


          <% @dish.ingredients.order('name').each do |ing|%>
          <div class="btn btn-info btn-sm extraheight"><%= ing.name %></div>
          <% end %>

      </dd>
      <dt>Last Updated</dt>
      <dd><%= @dish.updated_at %></dd>


    </dl>

    <div class="btn-group btn-group-justified">

      <a href="/dishes" class="btn btn-primary">
        Back
      </a>

      <a href="/dishes/<%= @dish.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_dish/<%= @dish.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>


    </div>
  </div>
</div>
