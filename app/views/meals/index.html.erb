<div class="page-header">
  <h1>
    Meals

    <a href="/meals/new" class="btn btn-lg btn-success">New Meal</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>

        <th>Date</th>

        <th>Mood</th>

        <th>Actions</th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>

        <td><%= meal.user_id %></td>

        <td><%= meal.date %></td>

        <td><%= meal.mood %></td>

        <td>

          <a href="/meals/<%= meal.id %>" class="btn btn-primary">Show</a>

          <a href="/meals/<%= meal.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_meal/<%= meal.id %>" class="btn btn-danger" rel="nofollow">Delete</a>


        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
