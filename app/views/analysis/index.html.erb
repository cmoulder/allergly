
<div class="page-header">
  <h1><%= current_user.first_name %>'s Allergy Analysis</h1>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <h4>Your top potential food allergies</h4>


      <ul>

        <% if @allergies.is_a? String  %>
        <li><div class="btn btn-success btn-sm extraheight"><%= @allergies.gsub('.', ' ') %></div>
          <% else %>
          <% @allergies.each do |allergy|%>
          <li><div class="btn btn-success btn-sm extraheight"><%= allergy.gsub('.', ' ') %></div>
            <% end %>
            <% end %>
          </ul>

        </dl>

      </div>
    </div>
  </div>
