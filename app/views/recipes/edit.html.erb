<!-- Validation failure messages -->
<% if @recipe.errors.any? %>
  <% @recipe.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Recipe #<%= @recipe.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/update_recipe/<%= @recipe.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for dish_id -->

      <div class="form-group">
        <label for="dish_id" class="control-label">
          Dish
        </label>


        <input type="text" id="dish_id" name="dish_id" placeholder="Dish" class="form-control" value="<%= @recipe.dish_id %>">

      </div>



      <!-- Label and input for ingredient_id -->

      <div class="form-group">
        <label for="ingredient_id" class="control-label">
          Ingredient
        </label>


        <input type="text" id="ingredient_id" name="ingredient_id" placeholder="Ingredient" class="form-control" value="<%= @recipe.ingredient_id %>">

      </div>



      <button class="btn btn-warning">
        Update Recipe
      </button>
      or

      <a href="/recipes/<%= @recipe.id %>">Cancel</a>


    </form>

  </div>
</div>
